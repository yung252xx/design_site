---
import './src/styles/global.css';
import { galleryImage } from '../data/galleryData.js';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content="Astro" />
		<title >Home</title>
	</head>
	<h1>Gallery</h1>

    <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 p-10">
      {galleryImage.map((img) => (
        <div class="relative group overflow-hidden rounded-xl shadow-lg">
          <img src={img.src} alt={img.title} class="w-full h-auto transition-transform duration-300 group-hover:scale-110" />
          <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 flex items-center justify-center transition">
            <p class="text-white text-lg font-semibold">{img.title}</p>
          </div>
        </div>
      ))}
    </section><section>
			
		</section>

		<footer class="text-center bg-black text-white py-6 mt-10 opacity-80">
			<p>&copy; 2025 Tripp Life. Keep it surreal</p>
		</footer>

	</body>
</html>